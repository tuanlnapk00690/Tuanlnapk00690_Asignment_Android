<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tuanlnapk00690_asignment_android.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="#00a8e6"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center" >

        <TextView
            android:id="@+id/quanly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý sinh viên"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="10" >

        <ImageButton
            android:id="@+id/imgbtnThemLop"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_weight="4"
            android:background="#005e80"
            android:src="@drawable/addclass" />

        <ImageButton
            android:id="@+id/imgbtnXemDS"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_weight="4"
            android:layout_marginLeft="2dp"
            android:background="#005e80"
            android:src="@drawable/classlist" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="10" >

        <ImageButton
            android:id="@+id/imgbtnQLSV"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_weight="4"
            android:background="#0083b3"
            android:src="@drawable/studentlist" />

        <ImageButton
            android:id="@+id/imgbtnConnect"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_weight="4"
            android:background="#0083b3"
            android:layout_marginLeft="2dp"
            android:src="@drawable/connect" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="10" >

        <ImageButton
            android:id="@+id/imgbtnShare"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_weight="4"
            android:background="#00a8e6"
            android:src="@drawable/share" />

        <ImageButton
            android:id="@+id/imgbtnInfo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_weight="4"
            android:background="#00a8e6"
            android:layout_marginLeft="2dp"
            android:src="@drawable/info" />

    </LinearLayout>

</LinearLayout>